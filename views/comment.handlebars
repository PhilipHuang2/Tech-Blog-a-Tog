
<div class="card mx-auto my-1" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.name}} on {{format_date post.post_date}}</h6>
    <p class="card-text">{{post.content}}</p>
  </div>
</div>

<h2 class="text-center">Comments</h2>

{{#each comments as |comment|}}
<div class="card mx-auto my-1" style="width: 18rem;">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{comment.name}} on {{format_date comment.post_date}}</h6>
    <p class="card-text">{{comment.content}}</p>
  </div>
</div>
{{/each}}
